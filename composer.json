{
    "name": "duncan3dc/guzzle-tools",
    "type": "library",
    "description": "A few tools for working with Guzzle",
    "keywords": ["guzzle", "log", "output", "debug"],
    "homepage": "https://github.com/duncan3dc/guzzle-tools",
    "license": "Apache-2.0",
    "authors": [{
        "name": "Craig Duncan",
        "email": "git@duncanc.co.uk",
        "homepage": "https://github.com/duncan3dc",
        "role": "Developer"
    }],
    "require": {
        "guzzlehttp/guzzle": "^6.3",
        "guzzlehttp/psr7": "^1.5",
        "psr/http-message": "^1.0",
        "psr/log": "^1.0.2",
        "php": "^8.0"
    },
    "require-dev": {
        "duncan3dc/object-intruder": "^0.3 || ^1.0",
        "infection/infection": "^0.18.2",
        "maglnet/composer-require-checker": "^2.0 || ^3.8",
        "mockery/mockery": "^1.4.4",
        "phpstan/phpstan": "^0.12.99",
        "phpstan/phpstan-mockery": "^0.12.7",
        "squizlabs/php_codesniffer": "^3.7",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {"duncan3dc\\Guzzle\\": "src/"}
    },
    "autoload-dev": {
        "psr-4": {"duncan3dc\\GuzzleTests\\": "tests/"}
    },
    "scripts": {
        "test": [
            "vendor/bin/phpunit",
            "vendor/bin/composer-require-checker",
            "vendor/bin/phpstan analyse --level=max src",
            "vendor/bin/phpstan analyse --level=max --configuration=phpstan-tests.neon tests",
            "vendor/bin/phpcs",
            "vendor/bin/infection",
            "@composer validate --strict"
        ]
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}
